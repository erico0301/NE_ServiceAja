<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ServiceAja" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkestBlue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <!-- Customize your theme here. -->
        <item name="android:fontFamily">@font/poppins_light</item>
    </style>

    <style name="SplashScreenTheme" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/gold</item>

        <!-- Customize your theme here. -->
    </style>

    <style name="lightBlueStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkestBlue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/lightBlue</item>
    </style>

    <style name="pinkStatusBar" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/darkestBlue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/pink</item>
    </style>

    <!-- Service Aja Logo -->
    <style name="serviceaja">
        <item name="android:textSize">50sp</item>
        <item name="android:textColor">@color/darkestBlue</item>
        <item name="android:fontFamily">@font/rakkas_regular</item>
    </style>

    <!-- slogan -->
    <style name="slogan">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/darkBlue</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- maps round corner -->
    <style name="mapsRoundCorner">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">20dp</item>
    </style>

    <!-- FullScreen Custom Dialog -->
    <style name="AppTheme.FullScreenDialog" parent="Theme.MaterialComponents.Light.Dialog">
        <item name="colorPrimaryDark">@color/purple_500</item>
        <item name="colorAccent">@color/teal_200</item>
        <item name="colorPrimary">@color/gold</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <!--TextAppearance-->
    <style name="textBaseStyle">
        <item name="fontFamily">@font/poppins_medium</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
        <item name="android:textSize">16sp</item>
    </style>

    <!--EditText Style-->
    <style name="editTextBaseStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_marginBottom">5dp</item>
        <item name="helperTextEnabled">true</item>
        <item name="helperTextTextAppearance">@font/poppins_medium</item>
        <item name="errorEnabled">true</item>
        <item name="errorTextAppearance">@font/poppins_medium</item>
        <item name="boxStrokeErrorColor">@color/red</item>
        <item name="prefixTextAppearance">@style/textBaseStyle</item>
        <item name="suffixTextAppearance">@style/textBaseStyle</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <!-- Button Enabled -->
    <style name="ButtonEnabled" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="android:background">@color/white</item>
        <item name="android:textColor">@color/darkestBlue</item>
        <item name="android:strokeColor">@color/darkestBlue</item>
    </style>

    <style name="ThemeOverlay.ServiceAja.AppWidgetContainer" parent="">
        <item name="appWidgetBackgroundColor">@color/light_blue_600</item>
        <item name="appWidgetTextColor">@color/light_blue_50</item>
    </style>


</resources>