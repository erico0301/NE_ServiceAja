<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/lightestBlue"
    android:padding="@dimen/widget_margin"
    android:theme="@style/ThemeOverlay.ServiceAja.AppWidgetContainer">

    <LinearLayout
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/gold"
        android:orientation="vertical"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="0dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:padding="10dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:layout_margin="0dp"
            android:padding="0dp"
            android:text="ServiceAja"
            android:textStyle="bold"
            android:textSize="35sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Transaksi"
            android:textSize="20sp"/>

    </LinearLayout>


    <TextView
        android:id="@+id/payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_marginTop="0dp"
        android:text="Menunggu Pembayaran"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="10dp"/>

    <TextView
        android:id="@+id/payment_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/konfirmasi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment"
        android:layout_marginTop="0dp"
        android:text="Menunggu Konfirmasi"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/konfirmasi_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/payment_value"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp" />
    <TextView
        android:id="@+id/packing"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/konfirmasi"
        android:layout_marginTop="0dp"
        android:text="Dikemas"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/packing_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/konfirmasi_value"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/send"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packing"
        android:layout_marginTop="0dp"
        android:text="Dikirim"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/send_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/packing_value"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/receive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send"
        android:layout_marginTop="0dp"
        android:text="Diterima"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:padding="10dp"/>
    <TextView
        android:id="@+id/receive_value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/send_value"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="0dp"
        android:padding="10dp"
        android:text="0"
        android:textColor="@color/black"
        android:textSize="20sp" />
</RelativeLayout>