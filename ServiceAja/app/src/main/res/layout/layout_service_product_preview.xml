<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/layoutItemPreview_fotoItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@drawable/picture_background_dark" />
    <TextView
        android:id="@+id/layoutItemPreview_namaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/layoutItemPreview_fotoItem"
        app:layout_constraintTop_toTopOf="@id/layoutItemPreview_fotoItem"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Car Wash"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutItemPreview_namaItem"
        app:layout_constraintStart_toStartOf="@id/layoutItemPreview_namaItem"
        android:text="Rp"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_light"/>
    <TextView
        android:id="@+id/layoutItemPreview_hargaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layoutItemPreview_namaItem"
        app:layout_constraintStart_toEndOf="@id/layoutItemPreview_fotoItem"
        android:layout_marginStart="25dp"
        android:text="50.000"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold" />
    <TextView
        android:id="@+id/layoutItemPreview_jumlahItem"
        android:layout_width="30dp"
        android:layout_height="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginEnd="10dp"
        android:gravity="center"
        android:fontFamily="@font/dm_sans"
        android:text="1"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:background="@drawable/bg_item_amount"/>

</androidx.constraintlayout.widget.ConstraintLayout>