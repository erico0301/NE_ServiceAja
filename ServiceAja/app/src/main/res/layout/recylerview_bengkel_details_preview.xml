<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp">

    <ImageView
        android:id="@+id/bengkelImg"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/rolls_royce_logo"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:background="@drawable/profile_round_corner"/>

    <TextView
        android:id="@+id/namaBengkel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="BMW"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"
        android:layout_toRightOf="@+id/bengkelImg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/kotaBengkel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medan"
        android:fontFamily="@font/dm_sans"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:layout_toRightOf="@+id/bengkelImg"
        android:layout_below="@+id/namaBengkel"
        android:layout_marginLeft="10dp"/>

</RelativeLayout>