<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.ReviewUserFragment"
    android:layout_margin="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/unreviewedTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Perlu Review"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewUnreviewedDetails"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/moreUnreviewed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:layout_marginBottom="20dp"/>

        <TextView
            android:id="@+id/reviewedTxt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Sudah Review"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:layout_marginBottom="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerViewReviewedDetails"
            android:layout_width="match_parent"
            android:layout_height="320dp" />
        <TextView
            android:id="@+id/moreReviewed"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="More"
            android:fontFamily="@font/poppins_medium"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="16sp"
            android:textAlignment="viewEnd"
            android:layout_marginBottom="10dp"/>

    </LinearLayout>
</ScrollView>