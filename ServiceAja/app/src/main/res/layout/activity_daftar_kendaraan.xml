<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DaftarKendaraan" >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/daftarKendaraan_toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close"
            app:title="Daftar Kendaraan"
            app:titleTextAppearance="@font/poppins_bold"
            android:background="@color/gold" />
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:paddingHorizontal="10dp" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/daftarKendaraan_kendaraan1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/layout_profile_info"
            app:layout_constraintStart_toStartOf="parent"
            android:padding="10dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/info_item_background" >
            <androidx.cardview.widget.CardView
                android:id="@+id/daftarKendaraan_frameFotoKendaraan1"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:cardCornerRadius="20dp"
                android:background="@drawable/picture_background_dark" >
                <ImageView
                    android:id="@+id/daftarKendaraan_fotoKendaraan1"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:src="@drawable/fortuner"
                    android:contentDescription="@string/vehicle_photo"
                    android:scaleType="fitXY"
                    android:background="@drawable/picture_background_dark"/>
            </androidx.cardview.widget.CardView>
            <TextView
                android:id="@+id/daftarKendaraan_noPlatKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="40dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toEndOf="@id/daftarKendaraan_frameFotoKendaraan1"
                android:layout_marginStart="10dp"
                android:text="@string/contohPlat"
                android:textSize="28sp"
                android:fontFamily="@font/poppins_medium" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_merkKendaraan1"
                app:layout_constraintStart_toEndOf="@id/daftarKendaraan_frameFotoKendaraan1"
                android:layout_marginStart="10dp"
                android:text="@string/vehicle_brand"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_namaKendaraan1"
                app:layout_constraintStart_toStartOf="@id/daftarKendaraan_namaKendaraan1"
                android:text="@string/name"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_tahunKendaraan1"
                app:layout_constraintStart_toStartOf="@id/daftarKendaraan_tahunKendaraan1"
                android:text="@string/vehicle_year"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:id="@+id/daftarKendaraan_merkKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_noPlatKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_bahanBakarKendaraan1"
                app:layout_constraintStart_toEndOf="@id/daftarKendaraan_frameFotoKendaraan1"
                android:layout_marginStart="10dp"
                android:text="@string/toyota"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:id="@+id/daftarKendaraan_namaKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_noPlatKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_bahanBakarKendaraan1"
                app:layout_constraintStart_toEndOf="@id/daftarKendaraan_merkKendaraan1"
                app:layout_constraintEnd_toStartOf="@id/daftarKendaraan_tahunKendaraan1"
                android:text="@string/fortuner"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:id="@+id/daftarKendaraan_tahunKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_noPlatKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_bahanBakarKendaraan1"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="30dp"
                android:text="@string/contohTahun"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_merkKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_warnaKendaraan1"
                app:layout_constraintStart_toEndOf="@id/daftarKendaraan_frameFotoKendaraan1"
                android:layout_marginStart="10dp"
                android:text="@string/color"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_namaKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_bahanBakarKendaraan1"
                app:layout_constraintStart_toStartOf="@id/daftarKendaraan_bahanBakarKendaraan1"
                android:text="@string/bahan_bakar"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:id="@+id/daftarKendaraan_warnaKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_merkKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_noMesinKendaraan1"
                app:layout_constraintStart_toEndOf="@id/daftarKendaraan_frameFotoKendaraan1"
                android:layout_marginStart="10dp"
                android:text="@string/white"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:id="@+id/daftarKendaraan_bahanBakarKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_namaKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_noMesinKendaraan1"
                app:layout_constraintStart_toEndOf="@id/daftarKendaraan_warnaKendaraan1"
                app:layout_constraintEnd_toStartOf="@id/daftarKendaraan_tahunKendaraan1"
                android:text="@string/bensin"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_noRangkaKendaraan1"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="10dp"
                android:text="@string/no_rangka"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_noMesinKendaraan1"
                app:layout_constraintStart_toStartOf="@id/daftarKendaraan_noMesinKendaraan1"
                android:text="@string/no_mesin"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_noBPKBKendaraan1"
                app:layout_constraintStart_toStartOf="@id/daftarKendaraan_noBPKBKendaraan1"
                android:text="@string/no_bpkb"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:id="@+id/daftarKendaraan_noRangkaKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_frameFotoKendaraan1"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
                android:layout_marginStart="10dp"
                android:text="@string/contohNoRangka"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:id="@+id/daftarKendaraan_noMesinKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_frameFotoKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="@string/contohNoMesin"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:id="@+id/daftarKendaraan_noBPKBKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toBottomOf="@id/daftarKendaraan_frameFotoKendaraan1"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                android:text="@string/contohNoBPKB"
                android:fontFamily="@font/poppins_light" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
                app:layout_constraintEnd_toStartOf="@id/daftarKendaraan_serviceTerakhirKendaraan1"
                android:layout_marginEnd="20dp"
                android:text="@string/last_service"
                android:fontFamily="@font/poppins_bold" />
            <TextView
                android:id="@+id/daftarKendaraan_serviceTerakhirKendaraan1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="10dp"
                android:text="@string/contohTanggal"
                android:fontFamily="@font/poppins_light" />
            <ImageButton
                android:id="@+id/daftarKendaraan_btnDelete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/daftarKendaraan_btnEdit"
                android:src="@drawable/ic_delete"
                android:contentDescription="@string/delete"
                android:background="@color/transparent"
                android:onClick="hapusKendaraan" />
            <ImageButton
                android:id="@+id/daftarKendaraan_btnEdit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:src="@drawable/ic_edit"
                android:contentDescription="@string/edit"
                android:background="@color/transparent"
                android:onClick="editKendaraan" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_add"
        android:contentDescription="@string/add"
        android:tooltipText="Tambah Alamat"
        android:onClick="tambahKendaraan" />
</androidx.coordinatorlayout.widget.CoordinatorLayout>