<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".DaftarKendaraan" >
    <com.google.android.material.appbar.AppBarLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:navigationIcon="@drawable/ic_close"/>
    </com.google.android.material.appbar.AppBarLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/layout_vehicle_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/layout_profile_info"
        app:layout_constraintStart_toStartOf="parent"
        android:padding="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginHorizontal="10dp"
        android:background="@drawable/info_item_background" >
        <androidx.cardview.widget.CardView
            android:id="@+id/vehicle_photo_card"
            android:layout_width="120dp"
            android:layout_height="120dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:cardCornerRadius="20dp"
            android:background="@drawable/picture_background" >
            <ImageView
                android:id="@+id/vehicle_photo"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:src="@drawable/fortuner"
                android:contentDescription="@string/vehicle_photo"
                android:scaleType="fitXY"
                android:background="@drawable/picture_background"/>
        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/no_plat"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
            android:layout_marginStart="10dp"
            android:text="BK XXXX XYZ"
            android:textSize="28sp"
            android:fontFamily="@font/poppins_medium" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/mobil_merk"
            app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
            android:layout_marginStart="10dp"
            android:text="@string/vehicle_brand"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/mobil_nama"
            app:layout_constraintStart_toStartOf="@id/mobil_nama"
            android:text="@string/name"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/mobil_tahun"
            app:layout_constraintStart_toStartOf="@id/mobil_tahun"
            android:text="@string/vehicle_year"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:id="@+id/mobil_merk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/no_plat"
            app:layout_constraintBottom_toTopOf="@id/mobil_bahanBakar"
            app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
            android:layout_marginStart="10dp"
            android:text="Toyota"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:id="@+id/mobil_nama"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/no_plat"
            app:layout_constraintBottom_toTopOf="@id/mobil_bahanBakar"
            app:layout_constraintStart_toEndOf="@id/mobil_merk"
            app:layout_constraintEnd_toStartOf="@id/mobil_tahun"
            android:text="Fortuner"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:id="@+id/mobil_tahun"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/no_plat"
            app:layout_constraintBottom_toTopOf="@id/mobil_bahanBakar"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="30dp"
            android:text="2018"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mobil_merk"
            app:layout_constraintBottom_toTopOf="@id/mobil_warna"
            app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
            android:layout_marginStart="10dp"
            android:text="Warna"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mobil_nama"
            app:layout_constraintBottom_toTopOf="@id/mobil_bahanBakar"
            app:layout_constraintStart_toStartOf="@id/mobil_bahanBakar"
            android:text="Bahan Bakar"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:id="@+id/mobil_warna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mobil_merk"
            app:layout_constraintBottom_toTopOf="@id/mobil_noMesin"
            app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
            android:layout_marginStart="10dp"
            android:text="Putih"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:id="@+id/mobil_bahanBakar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/mobil_nama"
            app:layout_constraintBottom_toTopOf="@id/mobil_noMesin"
            app:layout_constraintStart_toEndOf="@id/mobil_warna"
            app:layout_constraintEnd_toStartOf="@id/mobil_tahun"
            android:text="Bensin"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/mobil_noRangka"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="10dp"
            android:text="No. Rangka"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/mobil_noMesin"
            app:layout_constraintStart_toStartOf="@id/mobil_noMesin"
            android:text="No. Mesin"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/mobil_noBPKB"
            app:layout_constraintStart_toStartOf="@id/mobil_noBPKB"
            android:text="No. BPKB"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:id="@+id/mobil_noRangka"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vehicle_photo_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
            android:layout_marginStart="10dp"
            android:text="123456789123"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:id="@+id/mobil_noMesin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vehicle_photo_card"
            app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="234567891234"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:id="@+id/mobil_noBPKB"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/vehicle_photo_card"
            app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:text="345678912345"
            android:fontFamily="@font/poppins_light" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
            app:layout_constraintEnd_toStartOf="@id/last_service"
            android:layout_marginEnd="20dp"
            android:text="@string/last_service"
            android:fontFamily="@font/poppins_bold" />
        <TextView
            android:id="@+id/last_service"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toTopOf="@id/daftarKendaraan_btnEdit"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="10dp"
            android:text="1 Januari 2020"
            android:fontFamily="@font/poppins_light" />
        <ImageButton
            android:id="@+id/daftarKendaraan_btnDelete"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/daftarKendaraan_btnEdit"
            android:src="@drawable/ic_delete"
            android:background="@color/transparent" />
        <ImageButton
            android:id="@+id/daftarKendaraan_btnEdit"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:src="@drawable/ic_edit"
            android:background="@color/transparent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:layout_margin="20dp"
        app:srcCompat="@drawable/ic_add"
        android:contentDescription="@string/add"
        android:tooltipText="Tambah Alamat"
        android:onClick="tambahKendaraan" />
</LinearLayout>