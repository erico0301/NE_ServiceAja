<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:background="@drawable/round_blackcorner_whitebg">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/productImg"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        app:riv_corner_radius_top_left="20dp"
        app:riv_corner_radius_top_right="20dp"
        android:src="@drawable/dashcam"
        app:riv_mutate_background="true"
        android:padding="1dp"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/productImg"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginBottom="10dp">

        <TextView
            android:id="@+id/productName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dashcam"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:fontFamily="@font/dm_sans"
            android:layout_marginTop="10dp"/>
        <TextView
            android:id="@+id/rpTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans"
            android:layout_below="@+id/productName"/>
        <TextView
            android:id="@+id/productPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3.200.000"
            android:textSize="20sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans"
            android:layout_below="@+id/productName"
            android:layout_toRightOf="@+id/rpTxt"
            android:layout_marginLeft="10dp"/>

        <ImageView
            android:id="@+id/bengkelImg"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="fitXY"
            android:src="@drawable/mitsubishi_logo"
            android:background="@drawable/profile_round_corner"
            android:layout_below="@+id/productPrice"
            android:layout_marginTop="20dp"/>
        <TextView
            android:id="@+id/namaBengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mitsubishi"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans"
            android:layout_below="@+id/productPrice"
            android:layout_toRightOf="@+id/bengkelImg"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"/>
        <TextView
            android:id="@+id/kotaBengkel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Medan"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:textStyle="bold"
            android:fontFamily="@font/dm_sans"
            android:layout_below="@+id/namaBengkel"
            android:layout_toRightOf="@+id/bengkelImg"
            android:layout_marginLeft="10dp" />

        <TextView
            android:id="@+id/ratingTxt"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/productPrice"
            android:textSize="15sp"
            android:text="5.0"/>
        <ImageView
            android:id="@+id/ratingIcon"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:layout_marginTop="20dp"
            android:layout_below="@+id/productPrice"
            android:layout_toLeftOf="@+id/ratingTxt"
            android:src="@drawable/ic_rating_5"
            android:scaleType="fitXY"/>
        <ImageView
            android:id="@+id/loveIcon"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:src="@drawable/ic_love_filled"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"/>

    </RelativeLayout>


</RelativeLayout>