<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/layoutListViewKendaraan_listItem"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/layoutListViewKendaraan_plat"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingVertical="10dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:text="BK XXXX XYZ"/>
    <TextView
        android:id="@+id/layoutListViewKendaraan_nama"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingVertical="10dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:text="MITSUBISHI Pajero Sport 4WD"/>
    <TextView
        android:id="@+id/layoutListViewKendaraan_serviceTerakhir"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="end"
        android:paddingVertical="10dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/black"
        android:text="01/01/2021"/>
</LinearLayout>