<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".fragment.HomeFragment">

    <View
        android:id="@+id/topBg"
        android:layout_width="657dp"
        android:layout_height="323dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="-100dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="-123dp"
        android:background="@drawable/home_background_top" />

    <LinearLayout
        android:id="@+id/topMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/searchEditText"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_marginRight="10dp"
            android:layout_weight="8"
            android:paddingLeft="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/search_border"
            android:drawableLeft="@drawable/ic_search"
            android:fontFamily="@font/poppins_medium"
            android:hint="Telusuri" />

        <ImageView
            android:id="@+id/wishlistIcon"
            android:layout_width="10dp"
            android:layout_height="30dp"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:src="@drawable/ic_love_like"/>

    </LinearLayout>

    <TextView
        android:id="@+id/hello"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_below="@+id/topMenu"
        android:text="Halo, Never End"
        android:textColor="@color/darkestBlue"
        android:textSize="28sp"/>

    <TextView
        android:layout_width="350dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="5dp"
        android:layout_below="@+id/hello"
        android:text="@string/welcomeslogan"
        android:textColor="@color/darkBlue"
        android:textSize="18sp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/topBg"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/cekinfo"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_margin="10dp"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:padding="10dp"
                android:background="@drawable/round_car_details">

                <com.makeramen.roundedimageview.RoundedImageView
                    android:id="@+id/carImg"
                    android:layout_width="160dp"
                    android:layout_height="200dp"
                    android:layout_alignParentLeft="true"
                    android:layout_marginRight="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/xpander"
                    app:riv_corner_radius="10dp"/>

                <TextView
                    android:id="@+id/platNo"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/carImg"
                    android:fontFamily="@font/poppins_medium"
                    android:letterSpacing="0.1"
                    android:text="BK 2323 W"
                    android:textColor="@color/black"
                    android:textSize="25sp" />

                <TextView
                    android:id="@+id/merkTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/platNo"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/carImg"
                    android:text="Merk"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/carBrand"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/platNo"
                    android:layout_toRightOf="@+id/merkTxt"
                    android:text="Mitsubishi"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/namaTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merkTxt"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/carImg"
                    android:text="Nama"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/carName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/merkTxt"
                    android:layout_toRightOf="@+id/namaTxt"
                    android:text="Xpander"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/tahunTxt"
                    android:layout_width="80dp"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/namaTxt"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/carImg"
                    android:text="Tahun"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/carYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/namaTxt"
                    android:layout_toRightOf="@+id/tahunTxt"
                    android:text="2020"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/serviceTerakhirTxt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tahunTxt"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_toRightOf="@+id/carImg"
                    android:text="Service Terakhir :"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold"
                    android:fontFamily="@font/poppins_medium"/>
                <TextView
                    android:id="@+id/lastServiceDate"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/serviceTerakhirTxt"
                    android:layout_toRightOf="@+id/carImg"
                    android:text="26 Desember 2020"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:fontFamily="@font/poppins_medium"
                    android:maxLines="1"
                    android:ellipsize="end"/>

                <TextView
                    android:id="@+id/otherCar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/lastServiceDate"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentBottom="true"
                    android:layout_margin="5dp"
                    android:text="Kendaraan Lain"
                    android:textColor="@color/black"
                    android:textSize="15sp"
                    android:textStyle="bold|italic"
                    android:fontFamily="@font/dm_sans"/>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@color/darkestBlue"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="10dp"
                        android:fontFamily="@font/poppins_medium"
                        android:text="Kategori"
                        android:textColor="@color/gold"
                        android:textSize="18sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:id="@+id/iconLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:id="@+id/serviceCatIcon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_category_menu"
                            android:padding="10dp"
                            android:src="@drawable/ic_car_service" />

                        <ImageView
                            android:id="@+id/sparepartCatIcon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_category_menu"
                            android:padding="10dp"
                            android:src="@drawable/ic_sparepart" />

                        <ImageView
                            android:id="@+id/cuciCatIcon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_category_menu"
                            android:padding="10dp"
                            android:src="@drawable/ic_car_wash" />

                        <ImageView
                            android:id="@+id/derekCatIcon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_category_menu"
                            android:src="@drawable/ic_towing" />

                        <ImageView
                            android:id="@+id/lainCatIcon"
                            android:layout_width="55dp"
                            android:layout_height="55dp"
                            android:layout_weight="1"
                            android:background="@drawable/layout_category_menu"
                            android:padding="10dp"
                            android:src="@drawable/ic_others" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/serviceCatTxt"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/dm_sans"
                            android:text="Service"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/sparepartCatTxt"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/dm_sans"
                            android:text="Sparepart"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/cuciCatTxt"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/dm_sans"
                            android:text="Cuci"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/derekCatTxt"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/dm_sans"
                            android:text="Mobil Derek"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                        <TextView
                            android:id="@+id/lainCatTxt"
                            android:layout_width="55dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:layout_weight="1"
                            android:fontFamily="@font/dm_sans"
                            android:text="Lain-Lain"
                            android:textAlignment="center"
                            android:textColor="@color/white"
                            android:textSize="10dp" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/bengkeltersedia"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:layout_margin="20dp"/>

                <com.google.android.material.imageview.ShapeableImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:adjustViewBounds="true"
                    app:shapeAppearanceOverlay="@style/mapsRoundCorner"
                    android:scaleType="fitXY"
                    android:src="@drawable/maps" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/recyclerViewBengkelDetails"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="20dp"/>

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

</RelativeLayout>