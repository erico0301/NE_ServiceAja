<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/round_car_details">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/bengkelImg"
        android:layout_width="120dp"
        android:layout_height="110dp"
        app:riv_corner_radius="10dp"
        app:riv_border_width="1dp"
        app:riv_border_color="@color/lightBlue"
        android:src="@drawable/service_xpander"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/namaBengkel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Mitsubishi"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:fontFamily="@font/dm_sans"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/bengkelImg"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <TextView
        android:id="@+id/alamatBengkel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jl. Gatot Subroto"
        android:textSize="15sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dm_sans"
        android:layout_toRightOf="@+id/bengkelImg"
        android:layout_below="@+id/namaBengkel"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"/>
    <ImageView
        android:id="@+id/ratingIcon"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_toRightOf="@+id/bengkelImg"
        android:layout_below="@+id/alamatBengkel"
        android:layout_marginLeft="10dp"
        android:src="@drawable/ic_rating_5"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/ratingTxt"
        android:layout_width="wrap_content"
        android:layout_height="15dp"
        android:layout_below="@+id/alamatBengkel"
        android:layout_toRightOf="@+id/ratingIcon"
        android:fontFamily="@font/poppins_medium"
        android:text="5.0"
        android:textColor="@color/black" />

    <ImageView
        android:id="@+id/loveIcon"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:src="@drawable/ic_love_like"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true" />

</RelativeLayout>