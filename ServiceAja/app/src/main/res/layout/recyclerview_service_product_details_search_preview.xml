<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginBottom="10dp"
    android:layout_marginRight="10dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/productImg"
        android:layout_width="120dp"
        android:layout_height="110dp"
        app:shapeAppearanceOverlay="@drawable/round_car_details"
        android:src="@drawable/fb_aki"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/namaProduk"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Battery Xpander FB (Kering)"
        android:fontFamily="@font/dm_sans"
        android:layout_margin="10dp"
        android:layout_toRightOf="@+id/productImg"
        android:textColor="@color/black"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/rpTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rp"
        android:fontFamily="@font/dm_sans"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/productImg"
        android:layout_below="@+id/namaProduk"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/productPrice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="650.000"
        android:fontFamily="@font/dm_sans"
        android:layout_toRightOf="@+id/rpTxt"
        android:layout_below="@+id/namaProduk"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:textStyle="bold"/>
    <TextView
        android:id="@+id/namaMitra"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mitsubishi"
        android:fontFamily="@font/dm_sans"
        android:layout_toRightOf="@+id/productImg"
        android:layout_below="@+id/productPrice"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/ratingTxt"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:textSize="15sp"
        android:text="5.0"/>
    <ImageView
        android:id="@+id/ratingIcon"
        android:layout_width="100dp"
        android:layout_height="20dp"
        android:layout_alignParentBottom="true"
        android:layout_toLeftOf="@+id/ratingTxt"
        android:src="@drawable/ic_rating_5"
        android:scaleType="fitXY"/>

</RelativeLayout>