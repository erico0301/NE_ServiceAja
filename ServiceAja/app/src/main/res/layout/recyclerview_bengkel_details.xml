<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/layout_bengkelDetails"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_margin="5dp"
    android:background="@drawable/round_car_details">

    <ImageView
        android:id="@+id/bengkelImg"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="@drawable/round_car_details"
        android:src="@drawable/service_xpander"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/namaBengkel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Mitsubishi Motors"
        android:fontFamily="@font/dm_sans"
        android:layout_margin="10dp"
        android:textColor="@color/black"
        android:textSize="20sp"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/alamatBengkel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Jl Gatot Subroto"
        android:fontFamily="@font/dm_sans"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <TextView
        android:id="@+id/kotaBengkel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Medan"
        android:fontFamily="@font/dm_sans"
        android:layout_marginLeft="10dp"
        android:textColor="@color/black"
        android:textSize="15sp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="10dp"
        android:gravity="right">

        <ImageView
            android:id="@+id/ratingIcon"
            android:layout_width="100dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_rating_5"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/ratingTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_medium"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:textSize="15sp"
            android:text="5.0"/>

    </LinearLayout>

</LinearLayout>