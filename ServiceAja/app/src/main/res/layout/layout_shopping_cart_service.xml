<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="5dp" >

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/shoppingCartService_fotoItem"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:scaleType="fitXY"
        app:shapeAppearanceOverlay="@drawable/picture_background_dark" />
    <TextView
        android:id="@+id/shoppingCartService_namaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@id/shoppingCartService_fotoItem"
        app:layout_constraintTop_toTopOf="@id/shoppingCartService_fotoItem"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:text="Car Wash"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shoppingCartService_namaItem"
        app:layout_constraintStart_toStartOf="@id/shoppingCartService_namaItem"
        android:text="Rp"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:fontFamily="@font/poppins_light"/>
    <TextView
        android:id="@+id/shoppingCartService_hargaItem"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shoppingCartService_namaItem"
        app:layout_constraintStart_toEndOf="@id/shoppingCartService_fotoItem"
        android:layout_marginStart="25dp"
        android:text="50.000"
        android:textSize="18sp"
        android:fontFamily="@font/poppins_bold" />

    <TextView
        android:id="@+id/shoppingCartService_namaKendaraan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:text="Yamaha NMAX"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium" />

    <TextView
        android:id="@+id/shoppingCartService_platKendaraan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/shoppingCartService_namaKendaraan"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="BK XXXX XYZ"
        android:textSize="12sp"
        android:fontFamily="@font/poppins_medium" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:src="@drawable/ic_delete"
        android:background="@color/transparent"
        android:tint="@color/red" />

</androidx.constraintlayout.widget.ConstraintLayout>