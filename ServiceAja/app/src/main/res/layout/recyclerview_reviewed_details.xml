<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:background="@drawable/rectangle_blackcorner_whitebg">

    <ImageView
        android:id="@+id/produkImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/bodykit_x5"/>

    <TextView
        android:id="@+id/namaProduk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Bodykit X5 M Performance"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/dm_sans"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/produkImg"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/namaBengkel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="BMW"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/dm_sans"
        android:layout_toRightOf="@+id/produkImg"
        android:layout_below="@+id/namaProduk"
        android:layout_marginLeft="10dp"/>

    <ImageView
        android:id="@+id/ratingIcon"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_rating_5"
        android:scaleType="fitXY"
        android:layout_below="@+id/namaBengkel"
        android:layout_toRightOf="@+id/produkImg"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/tanggalReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="28 Des 2020"
        android:textSize="12sp"
        android:fontFamily="@font/dm_sans"
        android:layout_toRightOf="@+id/ratingIcon"
        android:layout_below="@+id/namaBengkel"
        android:layout_marginLeft="5dp"/>

    <TextView
        android:id="@+id/review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service memuaskan"
        android:textSize="15sp"
        android:fontFamily="@font/dm_sans"
        android:layout_below="@+id/produkImg"
        android:layout_marginTop="10dp"/>

</RelativeLayout>