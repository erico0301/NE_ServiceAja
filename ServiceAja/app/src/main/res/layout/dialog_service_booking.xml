<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp" >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="#EFACBD"
                android:text="Service ini tidak dilayani secara OFF-SITE" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pilih Kendaraan"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_vehicle_info"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:background="@drawable/info_item_background" >
                <androidx.cardview.widget.CardView
                    android:id="@+id/vehicle_photo_card"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:cardCornerRadius="20dp"
                    android:background="@drawable/picture_background_dark" >
                    <ImageView
                        android:id="@+id/vehicle_photo"
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        android:src="@drawable/fortuner"
                        android:contentDescription="@string/vehicle_photo"
                        android:scaleType="fitXY"
                        android:background="@drawable/picture_background_dark"/>
                </androidx.cardview.widget.CardView>
                <TextView
                    android:id="@+id/bookingService_instanceKendaraan_noPlat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
                    android:layout_marginStart="10dp"
                    android:text="@string/contohPlat"
                    android:textSize="28sp"
                    android:fontFamily="@font/poppins_medium" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookingService_instanceKendaraan_noPlat"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_instanceKendaraan_merkKendaraan"
                    app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
                    android:layout_marginStart="10dp"
                    android:text="@string/vehicle_brand"
                    android:fontFamily="@font/poppins_bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookingService_instanceKendaraan_noPlat"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_instanceKendaraan_namaKendaraan"
                    app:layout_constraintStart_toStartOf="@id/bookingService_instanceKendaraan_namaKendaraan"
                    android:text="@string/name"
                    android:fontFamily="@font/poppins_bold" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookingService_instanceKendaraan_noPlat"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_instanceKendaraan_tahunKendaraan"
                    app:layout_constraintStart_toStartOf="@id/bookingService_instanceKendaraan_tahunKendaraan"
                    android:text="@string/vehicle_year"
                    android:fontFamily="@font/poppins_bold" />
                <TextView
                    android:id="@+id/bookingService_instanceKendaraan_merkKendaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_instanceKendaraan_serviceTerakhir"
                    app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
                    android:layout_marginStart="10dp"
                    android:text="@string/toyota"
                    android:fontFamily="@font/poppins_light" />
                <TextView
                    android:id="@+id/bookingService_instanceKendaraan_namaKendaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_instanceKendaraan_serviceTerakhir"
                    app:layout_constraintStart_toEndOf="@id/bookingService_instanceKendaraan_merkKendaraan"
                    app:layout_constraintEnd_toStartOf="@id/bookingService_instanceKendaraan_tahunKendaraan"
                    android:text="@string/fortuner"
                    android:fontFamily="@font/poppins_light" />
                <TextView
                    android:id="@+id/bookingService_instanceKendaraan_tahunKendaraan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_instanceKendaraan_serviceTerakhir"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="30dp"
                    android:text="@string/contohTahun"
                    android:fontFamily="@font/poppins_light" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookingService_instanceKendaraan_merkKendaraan"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_btnKendaraanLain"
                    app:layout_constraintStart_toEndOf="@id/vehicle_photo_card"
                    android:layout_marginStart="10dp"
                    android:text="@string/last_service"
                    android:fontFamily="@font/poppins_bold" />
                <TextView
                    android:id="@+id/bookingService_instanceKendaraan_serviceTerakhir"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toTopOf="@id/bookingService_btnKendaraanLain"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:text="@string/contohTanggal"
                    android:fontFamily="@font/poppins_light" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bookingService_btnKendaraanLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="0dp"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    android:text="Kendaraan Lain"
                    android:textColor="@color/darkBlue"
                    style="@style/Widget.AppCompat.Button.Borderless" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="Pilih Alamat"
                android:textSize="20sp"
                android:fontFamily="@font/poppins_bold" />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="10dp"
                android:layout_marginVertical="10dp"
                android:background="@drawable/info_item_background">

                <TextView
                    android:id="@+id/bookingService_instanceAlamat_namaAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:text="Nama Alamat"
                    android:textSize="20dp"
                    android:fontFamily="@font/poppins_bold"/>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@id/bookingService_instanceAlamat_namaAlamat"
                    app:layout_constraintBottom_toBottomOf="parent"
                    android:layout_marginBottom="40dp">
                    <TableRow>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_column="1"
                            android:layout_marginEnd="20dp"
                            android:text="Nama Penerima" />

                        <TextView
                            android:id="@+id/bookingService_instanceAlamat_namaPenerima"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Contoh Nama Penerima" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="@string/tel_number" />
                        <TextView
                            android:id="@+id/bookingService_instanceAlamat_noTelp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="(+62)812-3456-7890" />
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:layout_column="1"
                            android:text="Alamat Lengkap" />

                        <TextView
                            android:id="@+id/bookingService_instanceAlamat_detailAlamat"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Alamat Lengkap penerima meliputi nama jalan secara lengkap, (RT/RW bila ada), desa/dusun, dan kelurahan." />

                    </TableRow>
                    <TableRow>
                        <TextView android:layout_column="1"/>
                        <TextView
                            android:id="@+id/bookingService_instanceAlamat_daerah"
                            android:layout_width="234dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="start"
                            android:text="Kecamatan, kabupaten/kota, provinsi, Indonesia, Kode Pos" />
                    </TableRow>
                </TableLayout>

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/bookingService_btnAlamatLain"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:padding="0dp"
                    android:text="Alamat Lain"
                    android:textColor="@color/darkBlue"
                    android:drawableEnd="@drawable/ic_arrow_right"
                    style="@style/Widget.AppCompat.Button.Borderless"/>

            </androidx.constraintlayout.widget.ConstraintLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Tanggal"
                style="@style/editTextBaseStyle"
                app:startIconDrawable="@drawable/ic_year_view">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bookingService_btnPilihTanggal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Pukul"
                style="@style/editTextBaseStyle"
                app:startIconDrawable="@drawable/ic_clock">
                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/bookingService_btnPilihWaktu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:inputType="none" />
            </com.google.android.material.textfield.TextInputLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>