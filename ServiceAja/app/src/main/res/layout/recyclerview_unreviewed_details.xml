<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:padding="10dp"
    android:background="@drawable/rectangle_blackcorner_whitebg">

    <ImageView
        android:id="@+id/serviceImg"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:scaleType="fitXY"
        android:src="@drawable/service_xpander"/>

    <TextView
        android:id="@+id/namaService"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Service 1 tahun"
        android:textColor="@color/black"
        android:textSize="18sp"
        android:fontFamily="@font/dm_sans"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/serviceImg"
        android:layout_margin="10dp"/>
    <ImageView
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:src="@drawable/ic_empty_rating"
        android:scaleType="fitXY"
        android:layout_below="@+id/namaService"
        android:layout_toRightOf="@+id/serviceImg"
        android:layout_marginLeft="10dp"/>

    <TextView
        android:id="@+id/beriReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Beri Review"
        android:textColor="@color/black"
        android:textSize="12sp"
        android:fontFamily="@font/dm_sans"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>

</RelativeLayout>