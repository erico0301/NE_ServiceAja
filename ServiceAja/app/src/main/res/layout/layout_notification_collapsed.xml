<?xml version="1.0" encoding="utf-8"?>
<!-- Layout yang digunakan untuk notification popup dan juga notification
     pada saat berukuran kecil (collapsed) -->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="@color/light_blue" >

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:layout_marginTop="-35dp"
        android:src="@drawable/ic_logo_color"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="-30dp"
        android:text="Selamat Datang! Terima kasih telah mandaftar ke ServiceAja!" />
</LinearLayout>