<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/rectangular_blackcorner_lightestbluebg"
    android:padding="10dp">

    <ImageView
        android:id="@+id/userProfile"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginBottom="20dp"
        android:background="@drawable/profile_round_corner"
        android:padding="5dp"
        android:scaleType="fitXY"
        android:src="@drawable/profile_2" />
    <TextView
        android:id="@+id/userName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jessica"
        android:textColor="@color/black"
        android:fontFamily="@font/poppins_medium"
        android:layout_toRightOf="@id/userProfile"
        android:layout_margin="10dp" />

    <TextView
        android:id="@+id/ratingTxt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5.0"
        android:textSize="12sp"
        android:textColor="@color/black"
        android:fontFamily="@font/dm_sans"
        android:layout_alignParentRight="true"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp" />
    <ImageView
        android:id="@+id/ratingIcon"
        android:layout_width="80dp"
        android:layout_height="15dp"
        android:layout_toLeftOf="@+id/ratingTxt"
        android:layout_below="@+id/alamatBengkel"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_rating_5"
        android:scaleType="fitXY"/>

    <TextView
        android:id="@+id/review"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/dm_sans"
        android:text="@string/detailreview"
        android:textSize="15sp"
        android:layout_below="@+id/userProfile"/>

</RelativeLayout>